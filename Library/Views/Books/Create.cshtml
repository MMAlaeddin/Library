@{
  Layout = "_Layout";
}

@model Library.Models.Book

<h4>Add a new book</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Title)
  @Html.TextBoxFor(model => model.Title)<br>

  @Html.Label("Select author")
  @Html.DropDownList("AuthorId")<br>

  <input type="submit" value="Add new book" class="btn" />
}
<p>@Html.ActionLink("Show all books", "Index")</p>
<p>@Html.ActionLink("Back to home page", "Index", "Home")</p>